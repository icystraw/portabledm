<Window x:Class="partialdownloadgui.MainWindow2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:partialdownloadgui"
        mc:Ignorable="d"
        Title="HTTP Download Manager" Background="#FFF5F6F7" Height="450" Width="1000" Closed="Window_Closed" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="600"></ColumnDefinition>
            <ColumnDefinition Width="5"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.Column="0">
            <WrapPanel HorizontalAlignment="Center" DockPanel.Dock="Top" Margin="5">
                <Button Name="btnAdd" Click="btnAdd_Click">Add</Button>
                <Button Name="btnEdit" Click="btnEdit_Click">Edit</Button>
                <Button Name="btnStart" Click="btnStart_Click">Start</Button>
                <Button Name="btnStop" Click="btnStop_Click">Stop</Button>
                <Button Name="btnDelete" Click="btnDelete_Click">Delete</Button>
                <Button Name="btnOpenFolder" Click="btnOpenFolder_Click">Open Folder</Button>
                <CheckBox Name="chkShutdown">Shut down after downloads finish</CheckBox>
            </WrapPanel>
            <GroupBox Header="Current Downloads" Margin="5">
                <ListView Name="lstDownloads" SelectionChanged="lstDownloads_SelectionChanged" Margin="5">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn DisplayMemberBinding="{Binding Path=FileName}" Header="File" Width="100" />
                            <GridViewColumn DisplayMemberBinding="{Binding Path=Size}" Header="Size" Width="80" />
                            <GridViewColumn DisplayMemberBinding="{Binding Path=Status}" Header="Status" Width="80" />
                            <GridViewColumn Header="Progress" Width="120">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <ProgressBar Minimum="0" Maximum="100" Value="{Binding Path=Progress}" Width="110" Height="10"></ProgressBar>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn DisplayMemberBinding="{Binding Path=Speed}" Header="Speed" Width="80" />
                            <GridViewColumn DisplayMemberBinding="{Binding Path=Error}" Header="Message" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </GroupBox>
        </DockPanel>
        <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch"></GridSplitter>
        <DockPanel Grid.Column="2">
            <GroupBox Header="Download Progress" DockPanel.Dock="Bottom" Margin="5">
                <UniformGrid Rows="1" Name="wpProgress" Margin="5" />
            </GroupBox>
            <GroupBox Header="Download Sessions" Margin="5">
                <ListView Name="lstSections" Margin="5">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Width="30">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Image>
                                            <Image.Style>
                                                <Style TargetType="Image">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="Downloading">
                                                            <Setter Property="Source" Value="pack://application:,,,/Images/right-arrow.png"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="DownloadError">
                                                            <Setter Property="Source" Value="pack://application:,,,/Images/error.png"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Finished">
                                                            <Setter Property="Source" Value="pack://application:,,,/Images/finished.png"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Image.Style>
                                        </Image>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn DisplayMemberBinding="{Binding Path=Description}" Header="Section" Width="100"/>
                            <GridViewColumn DisplayMemberBinding="{Binding Path=Size}" Header="Size" Width="80"/>
                            <GridViewColumn Header="Progress" Width="120">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <ProgressBar Minimum="0" Maximum="100" Value="{Binding Path=Progress}" Width="110" Height="3"></ProgressBar>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn DisplayMemberBinding="{Binding Path=Error}" Header="Message" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </GroupBox>
        </DockPanel>
    </Grid>
</Window>
