<Window x:Class="partialdownloadgui.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:partialdownloadgui"
        mc:Ignorable="d"
        Title="About" ShowInTaskbar="False" AllowsTransparency="True" Background="Transparent" WindowStyle="None" SizeToContent="Height" Width="500" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" MouseLeftButtonUp="Window_MouseLeftButtonUp">
    <Border CornerRadius="10" BorderThickness="1" BorderBrush="#FF7F9DFF" Background="#FFCFDBFF">
        <DockPanel>
            <Image DockPanel.Dock="Left" Source="pack://application:,,,/Images/decrease.ico" Width="40" Margin="30"></Image>
            <StackPanel>
                <TextBlock FontSize="16" FontWeight="Bold" Margin="0,25,0,0">Portable HTTP Download Manager</TextBlock>
                <TextBlock>An open source HTTP file download manager built with .NET.</TextBlock>
                <TextBlock>Version 1.0, icystraw</TextBlock>
                <TextBlock Margin="0,0,0,30">This program uses mkvmerge.exe from MKVToolNix to create mkv files.</TextBlock>
            </StackPanel>
        </DockPanel>
    </Border>
</Window>
